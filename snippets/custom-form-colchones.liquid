{% assign form_id = form_id | default: nil %}
{% assign alignment = alignment | append: ' main_form_colchones d-flex flex-column' %}
{% assign alignment_movil = alignment_movil %}
{% assign alineacion_elementos = alignment | append: ' ' | append: alignment_movil %}
{% assign newsletter_tags = etiqueta %}
{% assign fondo_boton = fondo_boton %}
{% assign color_letra_boton = color_letra_boton %}

{%- if template contains 'password' %}
  {% assign newsletter_tags = newsletter_tags | append: ', password page' %}
{%- else -%}
  {% comment %}{% assign newsletter_tags = newsletter_tags | append: ', newsletter' %}{% endcomment %}
  {% assign newsletter_tags = newsletter_tags | append: ', newsletter' | append: ', ' | append: page.title %}

{%- endif -%}

{% unless input_id %}
  {% assign input_id = 'newsletter_email' %}
{% endunless %}

  {% form 'customer', id: form_id, class: 'row text-start form-webtolead' %}
     {% if form.posted_successfully? %}
        <div class="text-center">
          <img src="https://cdn.shopify.com/s/files/1/0519/2695/8235/t/443/assets/Thanks%20icon.svg?v=1678865387"/>
          <h2 class="text-center text-gris-jamar">¡Gracias por suscribirte!</h2>
        </div>
      {% else %}
      <h2 class="text-md-start text-gris-jamar text-center mt-md-0 mt-2 mb-2">{{ titulo }}</h2>
      <p class="mt-0 text-md-start text-center text-gris-jamar mb-4">{{ texto }}</p>
      <input type="hidden" name="contact[tags]" value="{{ newsletter_tags }}">
      <div class="col-12 col-md-6 mb-4">
        <input
          class="rounded rounded-2 p-2 ps-3 bg-light-gris-jamar text-gris-jamar border-0 w-100"
          name="contact[note][Nombre]"
          id="name"
          type="text"
          placeholder="Nombre completo*"
          required
        >
      </div>
      <div class="col-16 col-md-6 mb-4">
        <input
          class="rounded rounded-2 p-2 ps-3 bg-light-gris-jamar text-gris-jamar border-0 w-100"
          name="contact[note][Whatsapp]"
          id="whatsapp"
          type="text"
          placeholder="Whatsapp*"
          required
        >
      </div>
      <div class="col-12 mb-4">
        <input
          class="rounded rounded-2 p-2 ps-3 bg-light-gris-jamar text-gris-jamar border-0 w-100"
          name="contact[email]"
          id="email"
          type="email"
          placeholder="Tu correo electrónico*"
          required
        > 
      </div>
      <div class="col-12 d-inline">
          <style>
            .form-check-input:checked {
                background-color: #6E7A8A ;
                border-color: #6E7A8A ;
            }
          </style>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked>
            <label class="form-check-label" for="flexCheckDefault">
              <span class="ms-1 text-gris-jamar">Deseo recibir promociones por WhatsApp</span>
            </label>
          </div>
      </div>
      <div class="col-12 d-inline">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
            <label class="form-check-label" for="flexCheckDefault">
              <span class="ms-1 text-gris-jamar">Acepto <a class="text-decoration-underline text-gris-jamar" href="/pages/politicas-de-privacidad"><b>Políticas de Privacidad de Datos</b></a></span>
            </label>
          </div>
      </div>
      <div class="col-12 text-start">
        <button
          class="btn rounded rounded-pill pt-2 pb-2 ps-4 pe-4 mt-3 border-0"
          style="background:{{ fondo_boton }}; color:{{ color_letra_boton }}"
          name="subscribe"
          type="submit"
          id="btn_{{form_id}}"
        >
          Enviar
        </button>
      </div>
  {% endif %}
{% endform %}

