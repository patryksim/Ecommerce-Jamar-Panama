{% schema %}
  {
    "name": "Listado de productos",
    "tag": "section",
    "settings": [
      {
        "type": "product_list",
        "id": "collections",
        "label": "Seleccionar productos",
        "limit": 14
      },
      {
        "type": "text",
        "id": "titleCarousel",
        "label": "Titulo del carousel de productos",
        "default": "Muebles modernos y a crédito"
      },
      {
        "type": "text",
        "id": "descriptionCarousel",
        "label": "Descripcion del carousel de productos"
      },
      {
        "type": "image_picker",
        "id": "listProductImage",
        "label": "Imagen de la tarjeta"
      }, {
        "type": "text",
        "id": "banner_position",
        "label": "Posición del banner",
        "default": "2"
      }, {
        "type": "url",
        "id": "urlCardCarousel",
        "label": "Descripcion del carousel de productos"
      }, {
        "type": "select",
        "id": "position",
        "label": "Alineamiento del titulo",
        "options": [
          {
            "value": "text-center",
            "label": "Centro"
          }, {
            "value": "text-end",
            "label": "Derecha"
          }, {
            "value": "text-start",
            "label": "Izquierda"
          }
        ],
        "default": "text-start"
      }
    ],
    "presets": [
      {
        "name": "Listado de productos"
      }
    ]
  }
{% endschema %}