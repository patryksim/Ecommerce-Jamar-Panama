<style>

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .producto-link--carrousel,
  .producto-link--carrousel:hover {
    text-decoration: none;
    color: #404B5A;
  }

  .producto-link--carrousel {
    height: 420px;
    width: 275px;
    border-radius: 8px;
  }
  .producto-link--carrousel img {
    width: 100%;
    height: 100%;
    border-radius: 8px;
  }



  .card-producto--carrousel {
    background-color: white;
    border-radius: 5px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.118);
    height: 420px;
    width: 275px;
    border-radius: 8px;
    position: relative;
  }
  .card-producto--carrousel .tag-discount {
    background-color: #FF3333;
    color: white;
    padding: 2px 5px;
    position: absolute;
    border-radius: 4px;
    font-size: 14px;
    right: 6px;
    top: 6px;
    font-weight: 800;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.118);
  }

  .card-producto--carrousel img {
    width: 100%;
    object-fit: cover;
    border-radius: 8px 8px 0 0;
    height: 250px;
  }

  .card-producto--carrousel p img {
    width: 10px;
  }

  .contenedor-informacion--carrousel {
    padding: 0 12px;
  }

  .contenedor-informacion--carrousel h4 {
    font-size: 14px;
    font-weight: 700;
    line-height: 14px;
    letter-spacing: 0;
    text-align: left;
    margin: 11px 0 0;
    height: 30px;
  }

  .contenedor-informacion--carrousel p {
    font-size: 14px;
    font-weight: 500;
    line-height: 18px;
    letter-spacing: 0;
    text-align: left;
    /* or 100% */
    color: #404B5A;
    margin-bottom: 10px;
  }

  .contenedor-informacion--carrousel p span {
    font-size: 14px;
    font-weight: 400;
    line-height: 12px;
    letter-spacing: 0;
    text-align: left;
    text-decoration: line-through;
    color: #6E7A8A;
  }

  .contenedor-informacion--carrousel .credijamar-texto-notified {
    font-size: 12px;
    font-weight: 700;
    line-height: 14px;
    letter-spacing: 0.02em;
    text-align: left;
    color: rgba(0, 181, 173, 1);
    margin-top: 20px;
    font-weight: 600;
  }

  .contenedor-informacion--carrousel p.cuota {
    font-size: 12px;
    padding: 0;
    margin-left: 0;
    align-items: bottom;
  }

  .contenedor-informacion--carrousel p.cuota img {
    height: 8px;
    width: 100px;
    padding: 0;
    margin: 0;
    object-fit: contain;
    object-position: left;
  }

  div.contenedor-scroll {
    padding-bottom: 20px;
  }

  /* width */
  .contenedor-scroll::-webkit-scrollbar {
    width: 10px;
    height: 10px;

  }

  /* Track */
  .contenedor-scroll::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 8px;
  }

  /* Handle */
  .contenedor-scroll::-webkit-scrollbar-thumb {
    background: #404B5A;
    border-radius: 8px;
  }

  /* Handle on hover */
  .contenedor-scroll::-webkit-scrollbar-thumb:hover {
    background: rgb(65, 65, 65);
  }

  .title-carousel-products-sucursal {
    color: #404b5a;
    margin-bottom: 20px;
    font-size: 32px;
    font-weight: 400;
  }

  @media screen and (max-width:700px) {
    .title-carousel-products-sucursal {
      font-size: 22px;
    }
  }
</style>



{% assign products = section.settings.collections.products %}

