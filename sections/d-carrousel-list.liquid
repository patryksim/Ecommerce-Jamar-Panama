  {% endif %}

  <section class="{{prefijo}}-colecciones"></section>

</h1>

<div class="container">
  <div class="row">
    <h2 class="title-carousel-products-sucursal {{section.settings.position}}">{{ section.settings.titleCarousel }}</h2>
    {% if section.settings.descriptionCarousel %}
      <p class="{{section.settings.position}}">{{ section.settings.descriptionCarousel }}</p>
    {% endif %}
  </div>
</div>

<div class="container">
  <div class="row gap-4 overflow-auto flex-nowrap contenedor-scroll ms-md-0 ms-2">
    {% for product in section.settings.collections %}
      <span class="d-none">{% increment variable %}</span>
      {% assign var = product %}
      {% render "product-carrousel-item", producto: {{product}} %}
    {% endfor %}
    {% if section.settings.urlCardCarousel %}
      <a class="producto-link--carrousel p-md-0 p-0" href="{{ section.settings.urlCardCarousel }}">
        <img src="{{ section.settings.listProductImage | image_url: width: 275, height: 420 }}" alt="{{ section.settings.listProductImage.alt}}">
      </a>
    {% endif %}
  </div>
</div>

