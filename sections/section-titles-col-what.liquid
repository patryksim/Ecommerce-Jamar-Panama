{{ 'section-titles-col.css'  | asset_url | stylesheet_tag }}
{{ 'section-parrafo-col.css'  | asset_url | stylesheet_tag }}

<div class="contenedor-titulos-seccion-detalles-iluminan style-2">
    <h2 class="style-2">{{section.settings.collection_title}}</h2>
    <p>{{section.settings.collection_parrafo}}</p>
     <a class="buttonWpp" style="background-color: {{ section.settings.color_butt_wha }} ;" href="{{ section.settings.url_whatsapp }}" >
      <img
        width="20px"
        src="https://cdn.shopify.com/s/files/1/0519/2695/8235/files/whatsapp-glyph-black_1.png?v=1668093853"
        alt="logo-whatsapp"
      >
      Â¡Un asesor experto te espera!
    </a>
</div>

<div class="banner-video-large">
  {% if section.settings.product != blank %}
    <a href="{{ section.settings.product.url }}">
        <img class="w-100" src="{{ section.settings.image_1_desktop | img_url:'master' }}">
    </a>
  {% else %}
    <img class="w-100" src="{{ section.settings.image_1_desktop | img_url:'master' }}">
  {% endif %}
</div>


    {% schema %}
    {
       "name":"Titulos Coleccion img-w",
       "class":"section-titulos-colecciones",
       "settings": [
        {
            "type":"text",
            "id":"collection_title",
            "label":"Colocar el titulo"
        },
        {
            "type":"text",
            "id":"collection_parrafo",
            "label":"Colocar el parrafo"
        },
        {
        "type": "product",
        "id": "product",
        "label": "Url producto"
      },
      {
        "type": "image_picker",
        "id": "image_1_desktop",
        "label": "Imagen del producto Desktop"
      },
     {
        "type":"url",
        "id":"url_whatsapp",
        "label":"Colocar el link del whatsapp"
    },
    {
	"type": "color",
     	"id": "color_butt_wha",
     	"label": "Color boton whatsapp",
        "default": "#808080"
}
        
       ],
       "presets":[
        {
            "name":"Titulos Coleccion img-w"
        }
       ]
    }
    {% endschema %}
